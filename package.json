{
  "name": "apicurio-vscode-extension",
  "displayName": "Apicurio Registry",
  "description": "Browse and edit API specifications from Apicurio Registry",
  "version": "0.2.0",
  "publisher": "apicurio",
  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": [
    "Other",
    "Formatters",
    "Linters"
  ],
  "keywords": [
    "openapi",
    "asyncapi",
    "api",
    "schema",
    "registry",
    "apicurio"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "views": {
      "explorer": [
        {
          "id": "apicurioRegistry",
          "name": "Apicurio Registry"
        }
      ]
    },
    "customEditors": [
      {
        "viewType": "apicurio.visualEditor",
        "displayName": "Apicurio Visual Editor",
        "selector": [
          {
            "filenamePattern": "*.{json,yaml,yml}"
          }
        ],
        "priority": "option"
      }
    ],
    "commands": [
      {
        "command": "apicurioRegistry.refresh",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "apicurioRegistry.connect",
        "title": "Connect to Registry",
        "icon": "$(plug)"
      },
      {
        "command": "apicurioRegistry.disconnect",
        "title": "Disconnect",
        "icon": "$(debug-disconnect)"
      },
      {
        "command": "apicurioRegistry.search",
        "title": "Search Artifacts",
        "icon": "$(search)"
      },
      {
        "command": "apicurioRegistry.createArtifact",
        "title": "Create Artifact",
        "icon": "$(add)",
        "category": "Apicurio Registry"
      },
      {
        "command": "apicurioRegistry.setupMCP",
        "title": "Setup AI Features (Claude Code)",
        "icon": "$(sparkle)",
        "category": "Apicurio Registry"
      },
      {
        "command": "apicurioRegistry.copyGroupId",
        "title": "Copy Group ID",
        "category": "Apicurio Registry"
      },
      {
        "command": "apicurioRegistry.copyArtifactId",
        "title": "Copy Artifact ID",
        "category": "Apicurio Registry"
      },
      {
        "command": "apicurioRegistry.copyVersion",
        "title": "Copy Version",
        "category": "Apicurio Registry"
      },
      {
        "command": "apicurioRegistry.copyFullReference",
        "title": "Copy Full Reference",
        "category": "Apicurio Registry"
      },
      {
        "command": "apicurioRegistry.openArtifact",
        "title": "Open Artifact",
        "category": "Apicurio Registry"
      },
      {
        "command": "apicurioRegistry.openVersion",
        "title": "Open Version",
        "category": "Apicurio Registry"
      },
      {
        "command": "apicurioRegistry.changeArtifactState",
        "title": "Change State",
        "category": "Apicurio Registry"
      },
      {
        "command": "apicurioRegistry.changeVersionState",
        "title": "Change State",
        "category": "Apicurio Registry"
      },
      {
        "command": "apicurioRegistry.downloadContent",
        "title": "Download Content",
        "category": "Apicurio Registry"
      },
      {
        "command": "apicurioRegistry.deleteGroup",
        "title": "Delete Group",
        "category": "Apicurio Registry"
      },
      {
        "command": "apicurioRegistry.deleteArtifact",
        "title": "Delete Artifact",
        "category": "Apicurio Registry"
      },
      {
        "command": "apicurioRegistry.deleteVersion",
        "title": "Delete Version",
        "category": "Apicurio Registry"
      },
      {
        "command": "apicurioRegistry.createDraftVersion",
        "title": "Create Draft Version",
        "category": "Apicurio Registry"
      },
      {
        "command": "apicurioRegistry.finalizeDraft",
        "title": "Finalize Draft",
        "category": "Apicurio Registry"
      },
      {
        "command": "apicurioRegistry.discardDraft",
        "title": "Discard Draft",
        "category": "Apicurio Registry"
      },
      {
        "command": "apicurioRegistry.editDraftMetadata",
        "title": "Edit Draft Metadata",
        "category": "Apicurio Registry"
      },
      {
        "command": "apicurioRegistry.mcp.start",
        "title": "Start MCP Server",
        "category": "Apicurio MCP"
      },
      {
        "command": "apicurioRegistry.mcp.stop",
        "title": "Stop MCP Server",
        "category": "Apicurio MCP"
      },
      {
        "command": "apicurioRegistry.mcp.restart",
        "title": "Restart MCP Server",
        "category": "Apicurio MCP"
      },
      {
        "command": "apicurioRegistry.mcp.showQuickActions",
        "title": "MCP Quick Actions",
        "category": "Apicurio MCP"
      },
      {
        "command": "apicurioRegistry.mcp.showStatus",
        "title": "Show MCP Server Status",
        "category": "Apicurio MCP"
      },
      {
        "command": "apicurioRegistry.mcp.configureClaude",
        "title": "Configure Claude Code",
        "category": "Apicurio MCP"
      },
      {
        "command": "apicurioRegistry.mcp.setup",
        "title": "Setup AI Features",
        "category": "Apicurio MCP"
      },
      {
        "command": "apicurioRegistry.generateClaudeCommand",
        "title": "Generate Claude MCP Command",
        "category": "Apicurio MCP"
      },
      {
        "command": "apicurioRegistry.verifyMCP",
        "title": "Verify MCP Configuration",
        "category": "Apicurio MCP"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "apicurioRegistry.refresh",
          "when": "view == apicurioRegistry",
          "group": "navigation"
        },
        {
          "command": "apicurioRegistry.search",
          "when": "view == apicurioRegistry",
          "group": "navigation"
        },
        {
          "command": "apicurioRegistry.createArtifact",
          "when": "view == apicurioRegistry",
          "group": "navigation@2"
        },
        {
          "command": "apicurioRegistry.connect",
          "when": "view == apicurioRegistry",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "apicurioRegistry.openArtifact",
          "when": "view == apicurioRegistry && viewItem =~ /artifact.*/",
          "group": "navigation@1"
        },
        {
          "command": "apicurioRegistry.openVersion",
          "when": "view == apicurioRegistry && viewItem == version",
          "group": "navigation@1"
        },
        {
          "command": "apicurioRegistry.copyGroupId",
          "when": "view == apicurioRegistry && viewItem == group",
          "group": "1_copy@1"
        },
        {
          "command": "apicurioRegistry.copyArtifactId",
          "when": "view == apicurioRegistry && viewItem =~ /artifact.*/",
          "group": "1_copy@1"
        },
        {
          "command": "apicurioRegistry.copyFullReference",
          "when": "view == apicurioRegistry && viewItem =~ /artifact.*/",
          "group": "1_copy@2"
        },
        {
          "command": "apicurioRegistry.copyVersion",
          "when": "view == apicurioRegistry && viewItem == version",
          "group": "1_copy@1"
        },
        {
          "command": "apicurioRegistry.copyFullReference",
          "when": "view == apicurioRegistry && viewItem == version",
          "group": "1_copy@2"
        },
        {
          "command": "apicurioRegistry.changeArtifactState",
          "when": "view == apicurioRegistry && viewItem =~ /artifact.*/",
          "group": "2_state@1"
        },
        {
          "command": "apicurioRegistry.changeVersionState",
          "when": "view == apicurioRegistry && viewItem =~ /^version/",
          "group": "2_state@1"
        },
        {
          "command": "apicurioRegistry.downloadContent",
          "when": "view == apicurioRegistry && viewItem =~ /artifact.*/",
          "group": "3_download@1"
        },
        {
          "command": "apicurioRegistry.createDraftVersion",
          "when": "view == apicurioRegistry && viewItem =~ /artifact.*/",
          "group": "4_draft@1"
        },
        {
          "command": "apicurioRegistry.downloadContent",
          "when": "view == apicurioRegistry && viewItem =~ /^version/",
          "group": "3_download@1"
        },
        {
          "command": "apicurioRegistry.finalizeDraft",
          "when": "view == apicurioRegistry && viewItem == version-draft",
          "group": "4_draft@1"
        },
        {
          "command": "apicurioRegistry.editDraftMetadata",
          "when": "view == apicurioRegistry && viewItem == version-draft",
          "group": "4_draft@2"
        },
        {
          "command": "apicurioRegistry.discardDraft",
          "when": "view == apicurioRegistry && viewItem == version-draft",
          "group": "9_dangerous@2"
        },
        {
          "command": "apicurioRegistry.deleteGroup",
          "when": "view == apicurioRegistry && viewItem == group",
          "group": "9_dangerous@1"
        },
        {
          "command": "apicurioRegistry.deleteArtifact",
          "when": "view == apicurioRegistry && viewItem =~ /artifact.*/",
          "group": "9_dangerous@1"
        },
        {
          "command": "apicurioRegistry.deleteVersion",
          "when": "view == apicurioRegistry && viewItem =~ /^version/",
          "group": "9_dangerous@1"
        }
      ]
    },
    "configuration": {
      "title": "Apicurio Registry",
      "properties": {
        "apicurioRegistry.connections": {
          "type": "array",
          "default": [],
          "description": "Registry connection configurations",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "description": "Connection name"
              },
              "url": {
                "type": "string",
                "description": "Registry URL"
              },
              "authType": {
                "type": "string",
                "enum": [
                  "none",
                  "basic",
                  "oidc"
                ],
                "default": "none",
                "description": "Authentication type"
              }
            },
            "required": [
              "name",
              "url"
            ]
          }
        },
        "apicurioRegistry.autoSave.enabled": {
          "type": "boolean",
          "default": false,
          "description": "Enable auto-save for draft versions"
        },
        "apicurioRegistry.autoSave.interval": {
          "type": "number",
          "default": 2000,
          "minimum": 500,
          "maximum": 10000,
          "description": "Auto-save interval in milliseconds (time after user stops typing)"
        },
        "apicurioRegistry.autoSave.saveOnFocusLoss": {
          "type": "boolean",
          "default": true,
          "description": "Automatically save when switching to another file"
        },
        "apicurioRegistry.mcp.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable MCP (Model Context Protocol) server for AI features"
        },
        "apicurioRegistry.mcp.serverType": {
          "type": "string",
          "enum": [
            "docker",
            "jar",
            "external"
          ],
          "default": "docker",
          "description": "How to run the MCP server (docker, jar, or external)"
        },
        "apicurioRegistry.mcp.dockerImage": {
          "type": "string",
          "default": "quay.io/apicurio/apicurio-registry-mcp-server:latest-snapshot",
          "description": "Docker image for MCP server"
        },
        "apicurioRegistry.mcp.jarPath": {
          "type": "string",
          "default": "",
          "description": "Path to MCP server JAR file (for JAR mode)"
        },
        "apicurioRegistry.mcp.port": {
          "type": "number",
          "default": 3000,
          "minimum": 1024,
          "maximum": 65535,
          "description": "Port for MCP server"
        },
        "apicurioRegistry.mcp.autoStart": {
          "type": "boolean",
          "default": true,
          "description": "Automatically start MCP server when VSCode opens"
        },
        "apicurioRegistry.mcp.safeMode": {
          "type": "boolean",
          "default": true,
          "description": "Enable safe mode (prevents destructive operations)"
        },
        "apicurioRegistry.mcp.pagingLimit": {
          "type": "number",
          "default": 200,
          "minimum": 10,
          "maximum": 1000,
          "description": "Maximum results per page for MCP queries"
        },
        "apicurioRegistry.display.useArtifactNames": {
          "type": "boolean",
          "default": false,
          "description": "Display artifact names instead of IDs in tree view (when available)"
        },
        "apicurioRegistry.display.reverseVersionOrder": {
          "type": "boolean",
          "default": false,
          "description": "Show newest versions first (default: oldest first)"
        },
        "apicurioRegistry.display.showArtifactCounts": {
          "type": "boolean",
          "default": true,
          "description": "Show artifact counts in group labels (e.g., 'my-group (5)')"
        },
        "apicurioRegistry.display.truncateDescriptions": {
          "type": "boolean",
          "default": true,
          "description": "Truncate long descriptions in tree view tooltips"
        },
        "apicurioRegistry.display.truncateLength": {
          "type": "number",
          "default": 50,
          "minimum": 10,
          "maximum": 200,
          "description": "Maximum length for truncated descriptions"
        },
        "apicurioRegistry.search.defaultLimit": {
          "type": "number",
          "default": 50,
          "minimum": 1,
          "maximum": 1000,
          "description": "Default maximum number of search results to return"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "npm run compile:extension && npm run compile:webview",
    "compile:extension": "webpack --mode production",
    "compile:webview": "vite build",
    "watch": "npm run watch:extension",
    "watch:extension": "webpack --mode development --watch",
    "watch:webview": "vite build --watch",
    "dev:webview": "vite",
    "test": "jest",
    "lint": "eslint src --ext ts",
    "pretest": "npm run compile && npm run lint"
  },
  "devDependencies": {
    "@hookform/resolvers": "^5.2.2",
    "@jest/globals": "^30.2.0",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "16.x",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@types/vscode": "^1.70.0",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "@vitejs/plugin-react": "^5.1.0",
    "eslint": "^8.0.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.0.0",
    "jest-environment-jsdom": "^30.2.0",
    "ts-jest": "^29.0.0",
    "ts-loader": "^9.4.0",
    "typescript": "^5.0.0",
    "vite": "^7.1.12",
    "webpack": "^5.70.0",
    "webpack-cli": "^5.0.0"
  },
  "dependencies": {
    "@apicurio/data-models": "^2.2.4",
    "@patternfly/react-code-editor": "^6.4.0",
    "@patternfly/react-core": "^6.4.0",
    "@patternfly/react-icons": "^6.4.0",
    "@vscode/webview-ui-toolkit": "^1.4.0",
    "axios": "^1.6.0",
    "immer": "^10.2.0",
    "lodash": "^4.17.21",
    "mime-types": "^2.1.35",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-hook-form": "^7.66.0",
    "react-markdown": "^10.1.0",
    "rehype-raw": "^7.0.0",
    "remark-gfm": "^4.0.1",
    "yaml": "^2.8.1",
    "zod": "^4.1.12",
    "zustand": "^5.0.8"
  },
  "optionalDependencies": {
    "@types/mime-types": "^2.1.1"
  }
}
